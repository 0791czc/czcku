/* pages/video/video.wxss */
video{
    width: 100%;
}
/* tab栏切换 */
.tab{
    display: flex;
    width: 100%;
    height: 100rpx;
}
.tab view{
    width: 33%;
    height: 100%;
    line-height: 100rpx;
    font-size: 16px;
    text-align: center;
    border-bottom: 6rpx solid #ccc;
}
.tab .on{
    border-bottom-color: aqua;
}
 /* tab栏切换里的内容 */
.con>view{
    display: none;
}
.con .on{
    display: block;
}
/* 详细内容里的标题 */
.con .xxnr .title{
    font-size: 40rpx;
    margin: 20rpx 6rpx;
}
/* 标星收藏 */
.con .xxnr .star{
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-top:-60rpx;
  margin-right: 40rpx; 
}
/* 详细内容里的主讲人及所属课程 */
.con .xxnr .zjr,.con .xxnr .sskc{
    font-size: 24rpx;
    margin: 10rpx 6rpx;
}
/* 评论内容盒子 */
.pl .plbox{
    width: 100%;
    height: 100rpx;
}
.pl .plbox .user{
    display: flex;
    width: 100%;
    height: 100rpx;
    margin: 40rpx 60rpx 0;
}
.pl .plbox .user .userUrl{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}
.pl .plbox .user .username{
    margin-left: 10rpx;
    line-height: 80rpx;
}
.pl .plbox .plcon{
    margin-left: 40rpx;
}
.pl .btn{
    display: flex;
    width: 100%;
    background-color: #ccc;
    position: fixed;
    bottom: 0;
}
.pl .btn .inp{
    width: 66%;
    height: 60rpx;
    padding-left: 20rpx;
    padding-top: 10rpx;
    margin-left: 20rpx;
    margin-top: 6rpx;
    background-color: #fff;
}
.pl .btn button{
    width:140rpx;
    height: 70rpx;
    margin-top: 6rpx;
    line-height: 70rpx;
    background-color: #F0FFF0;
}
.mulu{
    width: 100%;
    height: 100rpx;
    padding-left:20rpx; 
    line-height: 100rpx;
    border-bottom: 6rpx solid #ccc;
}
